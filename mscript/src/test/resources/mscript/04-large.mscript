/**
 * nested loop and if
 */

if ($rand('5')>3) {
	while ('$_myFunc()' | idx; label=outerLoop) {
		if (idx >3) {
			while('true' | maxLoopNum = 4) {
				if ('$rand()' < 0.5) {
					break outerLoop;
				}
				if ($rand('3') > 1) {
					continue outerLoop;
				}
			}
			break;
		}
		else {
			$dblClick('f4')
			continue;
		}
	}
